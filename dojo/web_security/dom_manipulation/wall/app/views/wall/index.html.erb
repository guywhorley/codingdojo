<div class="container">
    <h1 class="header">CodingDojo Wall</h1>
    <a class="a-top" href="/wall/logout">Logout</a>
    <div class="user-marquee">Welcome <%= @user.last_name%></div>
</div>

<div class="container">
    <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
    <% end %>
</div>

<div class="container">
    <div class="two columns"></div>
    <div class="eight columns">
        <div>Post a message</div>
        <form action="/message" method="post">
            <textarea name="message" class="u-full-width"></textarea><br />
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
            <input class="btn-post" type="submit" value="Post a message" />
        </form>
    </div>
    <div class="two columns"></div>
</div>


<div class="container all-messages">
    <div class="two columns"></div>
    <div class="eight columns">
        <h4>Messages</h4>

        <% if @messages %>
            <% @messages.each do |m| %>
                <p>
                    <q><%= m.message%></q><br />
                    <span class="author"><strong>- <%= User.find(m.user_id).last_name %></strong>,
                    <em><%= m.created_at%></em></span>

                </p>
            <%end%>
        <%end%>

    </div>
    <div class="two columns"></div>
</div>
