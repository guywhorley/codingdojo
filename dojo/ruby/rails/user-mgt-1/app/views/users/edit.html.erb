<div class="container">

    <div class="row">
        <% if flash[:error] -%>
          <p class='error'><%=h flash[:error] %></p>
        <% end -%>
        <% if flash[:notice] -%>
          <p class='notice'><%=h flash[:notice] %></p>
        <% end -%>
    </div>

    <div class="row">
        <div class="two columns"></div>
        <div class="eight columns">
            <h2>Edit User</h2>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <form action="update" method="post">
                <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                <input type="hidden" name="user[id]" value="<%= @user.id%>"/>
                <input type="text" class="u-full-width" name="user[first_name]" value="<%= @user.first_name%>" /><br />
                <input type="text" class="u-full-width" name="user[last_name]" value="<%= @user.last_name%>"/><br  />
                <input type="email" class="u-full-width" name="user[email_address]" value="<%= @user.email_address %>"><br />
                <input type="password" class="u-full-width" name="user[password]" Placeholder="Password" /><br />
                <input type="submit" name="submit" value="Update" class="u-full-width buttom" />
            </form>
        </div>
        <div class="two columns"></div>


    </div>
    <a href="/users/index">Back</a>

</div>
