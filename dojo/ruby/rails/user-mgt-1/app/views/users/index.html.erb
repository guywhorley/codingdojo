
<% if @users %>



<div class="container">
    <div class="row">
        <a href="/users/new">New User</a>
    </div>
</div>
<div class="container table">
    <div class="row">
        <table class="u-full-width">
            <thead>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email Address</th>
                <th>Actions</th>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                <tr>
                    <td><%= user.first_name%></td>
                    <td><%= user.last_name%></td>
                    <td><%= user.email_address%></td>
                    <td>
                        <ul>
                            <li>
                                <form action="/users/<%= user.id%>" method="get">
                                    <button type="submit" name="_method" value="edit" class="btn-link-gcw">Show</button>
                                </form>
                            </li>
                            <li>|</li>
                            <li>
                                <form action="/users/<%= user.id%>/edit" method="get">
                                    <button type="submit" name="_method" value="edit" class="btn-link-gcw">Edit</button>
                                </form>
                            </li>
                            <li>|</li>
                            <li>
                                <form action="/users/<%= user.id%>/edit" method="delete">
                                    <button type="submit" name="_method" value="destroy" class="btn-link-gcw">Destroy</button>
                                </form>
                            </li>
                        </ul>
                    </td>
                </tr>
                <%end%>
            </tbody>
        </table>
    </div>
</div>

<%end%>
