<% if @products %>
<div class="container table">
    <a class="top-a" href="/products/new">Add New Beer </a>
    <h1>Current Beer In Stock</h1>
    <div class="row">
        <table class="u-full-width">
            <thead>
                <th>name</th>
                <th>Description</th>
                <th>Price Per Pallet</th>
                <th>Actions</th>
            </thead>
            <tbody>
                <% @products.each do |p| %>
                <tr>
                    <td><%= p.name%></td>
                    <td><%= p.description%></td>
                    <td><%= p.pricing%></td>
                    <td>
                        <ul>
                            <li>
                                <form action="/products/<%= p.id%>" method="get">
                                    <button type="submit" name="_method" value="edit" class="btn-link-gcw">Show</button>
                                </form>
                            </li>
                            <li>|</li>
                            <li>
                                <form action="/products/<%= p.id%>/edit" method="get">
                                    <button type="submit" name="_method" value="edit" class="btn-link-gcw">Edit</button>
                                </form>
                            </li>
                            <li>|</li>
                            <li>
                                <form action="/products/<%= p.id%>" method="post">
                                    <input type="hidden" name="_method" value="delete" />
                                    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                                    <button type="submit" value="delete" class="btn-link-gcw"/>Delete</button>
                                </form>
                            </li>
                        </ul>
                    </td>
                </tr>
                <%end%>
            </tbody>
        </table>
    </div>
</div>

<%end%>
